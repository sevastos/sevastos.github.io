---
layout: default
---

<header class="has-face">
	<div class="face-canvas">
		<div class="face-elements">

			<div class="face-nose-right-outer face-nose face-nose-right face-nose-side"> </div>
			<div class="face-nose-right-inner face-nose face-nose-right face-nose-side"> </div>
			<div class="face-nose-left-outer face-nose face-nose-left face-nose-side"> </div>
			<div class="face-nose-left-inner face-nose face-nose-left face-nose-side"> </div>

			<div class="face-cheek face-cheek-left"> </div>
			<div class="face-cheek face-cheek-right"> </div>

			<div class="face-side face-side-left"> </div>
			<div class="face-side face-side-right"> </div>
		</div>

		<img src="assets/media/face.svg" class="face-anim-hover face-img face-img-tag js-svg-to-html" alt="Kanenas" />
	</div>
	<div class="face-shadow"></div>

	<nav class="cf">
		<ul>
			<!-- <li><a href="/">Den</a></li> -->
			<li><a href="/lab" class="icon-lab">LAB</a></li>
			<li><a href="/log" class="icon-notebook">LOG</a></li>
			<li><a href="/com" class="icon-mail-3">TALK</a></li>
			<!-- Com|Say|Gab|Yak|Lip|Yap|Ask|Call|Mail|Talk -->
		</ul>
	</nav>
</header>
